{
  "name": "@nrk/core-components",
  "homepage": "https://nrkno.github.io/core-components/",
  "author": "NRK <opensource@nrk.no> (https://www.nrk.no/)",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/core-components.min.js",
  "scripts": {
    "build": "rimraf dist/ && cpx 'index.html' dist/ && webpack",
    "lint": "standard **/*.js",
    "prepare": "npm run build",
    "publish:patch": "npm version patch -m 'Release patch %s' && npm run push",
    "publish:minor": "npm version minor -m 'Release minor %s' && npm run push",
    "publish:major": "npm version major -m 'Release major %s' && npm run push",
    "push": "git push && git push --tags && npm publish",
    "start": "NODE_ENV=development webpack-dev-server -d",
    "test": "npm run lint && mocha test/**/*.spec.js*",
    "test:watch": "mocha --watch test/**/*.spec.js*",
    "static-publish": "static-publish publish --directory ./dist --package ./package.json --verbose --latest"
  },
  "dependencies": {
    "custom-event-polyfill": "^0.3.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cpx": "^1.5.0",
    "expect.js": "0.3.1",
    "jsdom": "11.4.0",
    "mocha": "4.0.1",
    "rimraf": "^2.6.2",
    "standard": "^10.0.3",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrkno/core-components.git"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "before",
      "after"
    ],
    "ignore": [
      "dist"
    ]
  }
}
